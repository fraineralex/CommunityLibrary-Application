<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/assets/css/custom/virtual-select.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/css/custom/style.css" />
  <link rel="stylesheet" href="/assets/css/toast/toastr.css" />
  <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet' />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
  <title>{{pageTitle}}</title>
</head>

<body class="dark">
  <nav>
    <div class="nav-bar">
      <i class='bx bx-menu sidebarOpen'></i>
      <span class="logo navLogo"><a href="/">Books App</a></span>

      <div class="menu">
        <div class="logo-toggle">
          <span class="logo"><a href="/">Books App</a></span>
          <i class='bx bx-x siderbarClose'></i>
        </div>

        <ul class="nav-links">
          <li><a href="/" {{#if homeActive}}class="text-primary" {{/if}}><strong>Home</strong></a></li>
          {{#if detailsActive}}<li><a href="#"class="text-primary"><strong>Detalles</strong></a></li>{{/if}}
          <li><a href="/admin-books" {{#if booksActive}}class="text-primary" {{/if}}><strong>Libros</strong></a></li>
          <li><a href="/admin-categories" {{#if categoriesActive}}class="text-primary"
              {{/if}}><strong>Categor√≠as</strong></a></li>
          <li><a href="/admin-authors" {{#if authorsActive}}class="text-primary" {{/if}}><strong>Autores</strong></a>
          </li>
          <li><a href="/admin-editorials" {{#if editorialsActive}}class="text-primary"
              {{/if}}><strong>Editoriales</strong></a></li>
        </ul>
      </div>

      <div class="darkLight-searchBox">
        <div class="dark-light">
          <i class='bx bx-moon moon'></i>
          <i class='bx bx-sun sun'></i>
        </div>

        {{#if homeActive}}
        <div class="searchBox">
          <div class="searchToggle">
            <i class='bx bx-x cancel'></i>
            <i class='bx bx-search search'></i>
          </div>

          <div class="search-field">
            <form action="/search-book" method="post">
              <input name="SearchVar" type="text"
                placeholder="{{#if searching}}{{bookTitle}}{{else}}Presiona enter...{{/if}}" required>
              <i class='bx bx-search btn'></i>
            </form>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>


  <div class="container" id="main-container">

    {{{body}}}


  </div>

  <script src="/assets/js/custom/script.js"></script>
  <script src="/assets/js/custom/virtual-select.min.js"></script>
  <script src="/assets/js/bootstrap/bootstrap.js"></script>

  <script src="/assets/js/jQuery/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/toast/toastr.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
  <script src="/assets/js/index/index.js"></script>

  <script>
    VirtualSelect.init({
      ele: '#checkboxes-select'
    });
  </script>

</body>

</html>
